{% include 'main/bootstrap/header.twig' %}

{% if user['auth'] %}

{% else %}
<style>.app-content {padding-left:0}</style>

    <div class="home-head">
        <div class="home-head-bg" style="height:125px"></div>
    </div>
{% endif %}
<div class="app-content">
   <!-- page-content -->
   <div class="container-fluid">
      <div class="row mt-4">
         <div class="col-lg-12">
            <section class="blog-side">
               <div class="row">
                  <div class="container">
                     <div class="row">
                        <div class="col-md-12">
                           {% for post in blogList %}
                           <div class="d-card dc-dblue mb-3">
                              <div class="d-card-body" id="dc-body">
                                 <h4>{{ post['blog_title'] }}</h4>
                                 {% if post['blog_image'] %}
                                 <p><img src="{{ post['blog_image'] }}" alt="{{ post['blog_title'] }}" class="img-fluid" style="max-width:350px!important">
                                 </p>
                                 {% endif %}
                                 <div class="img-fluid" style="max-width:100%; word-wrap: break-word;" >{{ post['blog_content'][:150] }}...</div>
                                 <a href="{{ site['url'] }}/blog/{{ post['url'] }}" class="btn btn-primary">{{ lang['blog.read'] }}</a>
                              </div>
                           </div>
                           {% endfor %}
                        </div>
                     </div>
                  </div>
               </div>

         </section>
      </div>
   </div>
</div>

{% include 'main/bootstrap/footer.twig' %}