{% include 'main/bootstrap/header.twig' %}
<header class="hero-section" id="home">
  <div class="container">
    <div class="row h-100 align-items-center">
      <div class="col-md-6 order-2 order-sm-1">
        <div class="special-graphic shake-vertical">
          <img src="/assets/img/hero-3.png" alt=""/>
          <!--overlay image-->
          <img src="/assets/img/icon/svg-mock.png" alt="" class="mock">
        </div>
      </div>
      <div class="col-md-6 order-1 order-sm-2">
        <div class="m-card mb-5 mb-sm-0">
          <form method="post" action="">
            {% if errorText %}
            <div class="alert alert-dismissible alert-danger">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ errorText }}
            </div>
            {% endif %}
            {% if successText %}
            <div class="alert alert-dismissible alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ successText }}
            </div>
            {% endif %}
            <div class="form-group">
              <label>{{ lang['signup.username'] }}</label>
              <input type="text" class="form-control m-card-input" name="username" value="{{ data['username'] }}">
            </div>
            {% if settings['name_secret'] == 2 %}
            <div class="form-group">
              <label>{{ lang['signup.first_name'] }}</label>
              <input type="text" class="form-control m-card-input" name="first_name" value="{{ data['first_name'] }}">
            </div>
            <div class="form-group">
              <label>{{ lang['signup.last_name'] }}</label>
              <input type="text" class="form-control m-card-input" name="last_name" value="{{ data['last_name'] }}">
            </div>
            {% endif %}
            <div class="form-group">
              <label>{{ lang['signup.email'] }}</label>
              <input type="text" class="form-control m-card-input" name="email" value="{{ data['email'] }}">
            </div>
            {% if settings['skype_area'] == 2 %}
            <div class="form-group">
              <label>{{ lang['signup.telephone'] }}</label>
              <input type="text" class="form-control m-card-input" name="telephone" value="{{ data['telephone'] }}">
            </div>
            {% endif %}
            <div class="form-group">
              <label>{{ lang['signup.password'] }}</label>
              <input type="password" class="form-control m-card-input" name="password">
            </div>
            <div class="form-group">
              <label>{{ lang['signup.confirm'] }}</label>
              <input type="password" class="form-control m-card-input" name="password_again">
            </div>
            {% if settings['terms_checkbox'] == 2 %}
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck1" name="terms" value="1">
              <label class="custom-control-label" for="customCheck1">{{ lang['signup.accept_terms_text'] }}</label>
            </div>
            {% endif %}
            {% if settings['recaptcha'] == 2 %}
            {% if captcha %}
            <div class="row mt-2">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}
          {% endif %}
            <div class="clearfix"></div>
            <div class="form-group mt-2">
              <button class="btn btn-header w-100">Kayıt Ol</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</header>

{% for lang in site['languages'] %}
{% if lang['active'] %}
<script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
{% endif %}
{% endfor %}

{% include 'main/bootstrap/footer.twig' %}