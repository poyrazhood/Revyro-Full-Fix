{% include 'main/bootstrap/header.twig' %}
<header class="hero-section" id="home">
  <div class="container">
    <div class="row h-100 align-items-center">
      <div class="col-md-6 order-2 order-sm-1">
        <div class="special-graphic shake-vertical">
          <img src="/assets/img/hero-3.png" alt=""/>
          <!--overlay image-->
          <img src="/assets/img/icon/svg-mock.png" alt="" class="mock">
        </div>
      </div>
      {% if resetStep == 1 %}
      <div class="col-md-6 order-1 order-sm-2">
        <div class="m-card mb-5 mb-sm-0">
          <form method="post" action="">
            {% if errorText %}
            <div class="alert alert-dismissible alert-danger">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ errorText }}
            </div>
            {% endif %}
            {% if successText %}
            <div class="alert alert-dismissible alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ successText }}
            </div>
            {% endif %}
            <div class="form-group">
              <label>{{ lang['resetpassword.user'] }}</label>
              <input type="text" class="form-control" name="user" value="{{ data['user'] }}">
            </div>

            <div class="form-group">
              <label>{{ lang['resetpassword.type'] }}</label>
              <select class="form-control" name="type">
               {% for reset in resetType %}
               <option value="{{ reset['type'] }}">{{ reset['name'] }}</option>
               {% endfor %}
             </select>
           </div>

           {% if captcha %}
           <div class="form-group">
            <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
          </div>
          {% endif %}             

          <button type="submit" class="btn btn-secondary btn-lg btn-block mt-3">
            {{ lang['resetpassword.button'] }}
          </button>
        </form>
      </div>
    </div>
      {% else %}
      <div class="col-md-6 order-1 order-sm-2">
        <div class="m-card mb-5 mb-sm-0">
          <form method="post" action="">
            {% if errorText %}
            <div class="alert alert-dismissible alert-danger">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ errorText }}
            </div>
            {% endif %}
            {% if successText %}
            <div class="alert alert-dismissible alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              {{ successText }}
            </div>
            {% endif %}
            <div class="form-group">
              <label>{{ lang['resetpassword.user'] }}</label>
              <input type="text" class="form-control" name="user" value="{{ data['user'] }}">
            </div>

            <div class="form-group">
              <label for="username" class="control-label">{{ lang['account.password.new'] }}</label>
              <input type="password" class="form-control" name="password">
           </div>
            <div class="form-group">
              <label for="username" class="control-label">{{ lang['account.password.confirm'] }}</label>
              <input type="password" class="form-control" name="confirm_password">
           </div>
            {% if settings['recaptcha'] == 2 %}
           {% if captcha %}
           <div class="form-group">
            <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
          </div>
          {% endif %}
          {% endif %}

          <button type="submit" class="btn btn-secondary btn-lg btn-block mt-3">
            {{ lang['resetpassword.button'] }}
          </button>
        </form>
      </div>
    </div>
      {% endif %}
  </div>
</div>
</header>

{% for lang in site['languages'] %}
{% if lang['active'] %}
<script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
{% endif %}
{% endfor %}

{% include 'main/bootstrap/footer.twig' %}
