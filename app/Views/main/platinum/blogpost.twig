{% include 'main/platinum/header.twig' %}
<style>
.img-responsive,
.thumbnail > img,
.thumbnail a > img,
.carousel-inner > .item > img,
.carousel-inner > .item > a > img {
    display: block;
    max-width: 100%;
    height: auto;
}
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-lg-offset-2">
          {% for post in blogList %}
            <div class="well">
                <h3>{{ post['blog_title'] }}</h3>
                {% if post['blog_image'] %}
                  <p><img src="{{ post['blog_image'] }}" style="width:100%;" alt="{{ post['blog_title'] }}" class="img-responsive"></p>
                {% endif %}  
                <div class="img-fluid" style="max-width:100%; word-wrap: break-word;">{{ post['blog_content'] }}</div>
            </div>
          {% endfor %}
            <div class="row">
                <div class="col-md-12">
                    <a href="{{ site['url'] }}/blog" class="btn btn-primary">{{ lang['blog.back'] }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'main/platinum/footer.twig' %}